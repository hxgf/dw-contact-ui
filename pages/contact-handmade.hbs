
  {{#if process}}

    <h3>Thanks for getting in touch with us.</h3>
    <h4 class="subtitle">We'll get back to you as soon as we can.</h4>

  {{else}}

    <form class="contact" action="/contact/process" method="post">

      <div class="row">
        <div class="medium-6 large-6 columns large-centered medium-centered small-centered">

          <label>Your Email Address</label>
          <input type="text" name="email" />

          <label>Subject</label>
          <input type="text" name="subject" />

          <label>Message</label>
          <textarea name="message" class="reply"></textarea>

          <div id="cfv">
            <input type="text" name="cfv" />
          </div>

          <button>Send Message</button>

        </div>
      </div>

    </form>

  {{/if}}
